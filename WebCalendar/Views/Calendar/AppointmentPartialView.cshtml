@model WebCalendar.Models.Appointment


@using (Html.BeginForm("Appointment", "Calendar", new { CalendarViewmodel = Model }, FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <div id="message-list">
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(m => m.AppointmentDate, new { id = "post-date" })
        <div class="form-group">
            <div class="row">
                <div class="col-lg-12" id="appointment-header">
                    <input type="button" id="close-appointment" value="X" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">

                    @Html.TextBoxFor(model => model.AppointmentStartTime, "", new { id = "app-Timestart" })
                </div>
                <div class="col-lg-4">
                    @Html.TextBoxFor(model => model.AppointmentEndTime, "", new { id = "app-Timeend" })
                </div>
                <div class="col-lg-4">
                   <p>Dagsschema</p>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @Html.TextAreaFor(model => model.AppointmentMessage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AppointmentMessage, "", new { @class = "text-danger" })
                </div>
            </div>
           
           
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Create" id="create-appointment" class="btn btn-default" name="appButton"  />
                <input type="submit" value="Edit" id="edit-appointment" class="btn btn-default" name="appButton" />
            </div>
        </div>
    </div>
}

